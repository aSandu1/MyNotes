<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNotes.MainPage">


	<StackLayout Padding="10">
		<Button Text="Vezi Notițele Șterse"
        Clicked="OnViewTrashClicked"
        BackgroundColor="DarkRed"
        TextColor="White"
        Margin="10"/>

		<!-- Adaugă un buton pentru testare -->
		<Button x:Name="CounterBtn"
                Text="Click me"
                Clicked="OnCounterClicked" />

		<!-- Adaugă un Label pentru a afișa mesajele -->
		<Label x:Name="DebugText"
               Text="Notițele vor apărea aici"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand" />

	</StackLayout>
</ContentPage>
